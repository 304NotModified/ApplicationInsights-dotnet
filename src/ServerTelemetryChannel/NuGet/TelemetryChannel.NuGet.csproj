<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildProjectDirectory), 'Common.props'))\Common.props" />

  <!-- Temporary. Need to get rid of all Product.props-->
  <PropertyGroup>
    <!--Removing the SRC folder from the output directory-->
    <CorePath>$(RelativeOutputPathBase.Substring(4))</CorePath>	
    <OutputPath>$(BinRoot)\$(Configuration)\$(CorePath)</OutputPath>
    <OutputPath>$([System.IO.Path]::GetFullPath( $(OutputPath) ))\</OutputPath>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFrameworks>net45</TargetFrameworks>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <DisableImplicitFrameworkReferences>true</DisableImplicitFrameworkReferences>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <PackageSpecFile>$(MSBuildProjectDirectory)\Package.nuspec</PackageSpecFile>
    <PackageVersionFile>$(BinRoot)\$(Configuration)\ServerTelemetryChannel\Managed\Net40\Microsoft.AI.ServerTelemetryChannel.dll</PackageVersionFile>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Managed\TelemetryChannel.csproj" />
  </ItemGroup>
  <ItemGroup>
    <None Update="ApplicationInsights.config.install.xdt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="ApplicationInsights.config.transform">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="ApplicationInsights.config.uninstall.xdt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <Import Project="$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildProjectDirectory), 'Package.targets'))\Package.targets" />
  <Import Project="$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory), 'Common.targets'))\Common.targets" />
</Project>